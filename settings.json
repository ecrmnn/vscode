{
    "workbench.editor.showTabs": false,
    "workbench.activityBar.visible": false,
    "editor.fontSize": 14.5,
    "editor.lineHeight": 28,
    "editor.fontFamily": "Gintronic",
    "files.autoSave": "afterDelay",
    "workbench.sideBar.location": "left",
    "workbench.statusBar.feedback.visible": false,
    "editor.mouseWheelScrollSensitivity": 0.7,
    "workbench.colorCustomizations": {
        "statusBar.background": "#1A1A1A",
        "statusBar.noFolderBackground": "#212121",
        "statusBar.debuggingBackground": "#263238",
        "sideBar.background": "#1f2128",
        "editor.background": "#1f2128"
    },
    "files.associations": {
        "*.blade.php": "html"
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.rulers": [
            100
        ],
    },
    "html.format.wrapAttributes": "force",
    "html.format.wrapLineLength": 100,
    "[php]": {
        "editor.tabSize": 4,
        "editor.rulers": [
            120
        ],
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.rulers": [
            100
        ],
    },
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "Atom One Dark",
    "window.zoomLevel": 0,
    "explorer.confirmDelete": false,
    "editor.snippetSuggestions": "top",
    "php.suggest.basic": false,
    "files.autoSaveDelay": 500,
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "typescript",
            "autoFix": true
        },
    ],
    "editor.suggest.snippetsPreventQuickSuggestions": true,
    "editor.tabSize": 2,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
    },
    "diffEditor.renderSideBySide": false,
    "explorer.openEditors.visible": 0,
    "namespaceResolver.sortNatural": true,
    "namespaceResolver.exclude": "**/node_modules/**",
    "terminal.integrated.fontSize": 14.5,
    "terminal.integrated.lineHeight": 1.5,
    "explorer.confirmDragAndDrop": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "global-config.links": [
        "tasks.json"
    ],
    "phpcs.standard": "PSR2"
}
