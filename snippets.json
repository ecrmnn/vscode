{
	"php.init_class": {
		"scope": "php",
		"prefix": "class",
		"body": [
			"class ${TM_FILENAME_BASE}",
			"{",
			"$0",
			"}",
			""
		],
		"description": "Initialize a class"
	},
	"php.construct": {
		"scope": "php",
		"prefix": "_c",
		"body": [
			"public function __construct($0)",
			"{",
			"",
			"}"
		],
		"description": "Constructor function"
	},
	"php.function": {
		"scope": "php",
		"prefix": "f",
		"body": [
			"function",
		],
		"description": "Function"
	},
	"filename": {
		"prefix": "file",
		"body": [
			"${TM_FILENAME_BASE}",
		],
		"description": "Current file name without file extension"
	},
	"php.block_comment": {
		"scope": "php",
		"prefix": "***",
		"body": [
			"/*",
			"|-------------------------------------------------------------------------------------------------------------------",
			"| $0",
			"|-------------------------------------------------------------------------------------------------------------------",
			"*/"
		],
		"description": "Big block comment"
	}
}
